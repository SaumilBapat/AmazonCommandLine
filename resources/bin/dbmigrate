#!/bin/sh
echo "==> Attempting to migrate database"

MACHINE=dev
MIGRATION_COMMAND_DEV="yarn run db-migrate up:dev"
MIGRATION_COMMAND="yarn run db-migrate up"

until docker-compose exec $MACHINE $MIGRATION_COMMAND_DEV; do
  sleep 1
done

until docker-compose exec $MACHINE $MIGRATION_COMMAND; do
  sleep 1
done
